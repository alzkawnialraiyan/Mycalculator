<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#1C1C1C">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:textSize="32dp"
        android:textColor="@color/white"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toTopOf="@id/layout1"
        android:background="#1C1C1C"
        android:fontFamily="@font/opensanscondensedregular"/>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt">

        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onClickNumbers"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btnc"
            android:text="AC"
            android:textSize="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/opensanscondensedregular"
            android:background="@drawable/btncolorgray"/>
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onClickNumbers"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btnplusmin"
            android:text="+/-"
            android:textSize="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/opensanscondensedregular"
            android:background="@drawable/btncolorgray"/>
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onClickNumbers"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btnmod"
            android:text="%"
            android:textSize="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/opensanscondensedregular"
            android:background="@drawable/btncolorgray"/>
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onClickNumbers"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btndiv"
            android:text="รท"
            android:textSize="32dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/opensanscondensedregular"
            android:background="@drawable/btncolororange"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout1">

        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onClickNumbers"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn7"
            android:text="7"
            android:textSize="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/opensanscondensedregular"
            android:background="@drawable/btncolordarkgray"/>
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onClickNumbers"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn8"
            android:text="8"
            android:textSize="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/opensanscondensedregular"
            android:background="@drawable/btncolordarkgray"/>
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onClickNumbers"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn9"
            android:text="9"
            android:textSize="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/opensanscondensedregular"
            android:background="@drawable/btncolordarkgray"/>
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onClickNumbers"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btnmul"
            android:text="X"
            android:textSize="32dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/opensanscondensedregular"
            android:background="@drawable/btncolororange"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout2">

        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onClickNumbers"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn4"
            android:text="4"
            android:textSize="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/opensanscondensedregular"
            android:background="@drawable/btncolordarkgray"/>
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onClickNumbers"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn5"
            android:text="5"
            android:textSize="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/opensanscondensedregular"
            android:background="@drawable/btncolordarkgray"/>
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onClickNumbers"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn6"
            android:text="6"
            android:textSize="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/opensanscondensedregular"
            android:background="@drawable/btncolordarkgray"/>
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onClickNumbers"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btnmin"
            android:text="-"
            android:textSize="32dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/opensanscondensedregular"
            android:background="@drawable/btncolororange"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout3">

        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onClickNumbers"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn1"
            android:text="1"
            android:textSize="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/opensanscondensedregular"
            android:background="@drawable/btncolordarkgray"/>
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onClickNumbers"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn2"
            android:text="2"
            android:textSize="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/opensanscondensedregular"
            android:background="@drawable/btncolordarkgray"/>
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onClickNumbers"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn3"
            android:text="3"
            android:textSize="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/opensanscondensedregular"
            android:background="@drawable/btncolordarkgray"/>
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onClickNumbers"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btnplus"
            android:text="+"
            android:textSize="32dp"
            android:fontFamily="@font/opensanscondensedregular"
            android:background="@drawable/btncolororange"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout4"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onClickNumbers"
            android:id="@+id/btn0"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="0"
            android:textSize="32dp"
            android:fontFamily="@font/opensanscondensedregular"
            android:background="@drawable/btneq"/>
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onClickNumbers"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btndot"
            android:text="."
            android:textSize="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensanscondensedregular"
            android:background="@drawable/btncolordarkgray"/>
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onClickNumbers"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btneq"
            android:text="="
            android:textSize="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/opensanscondensedregular"
            android:background="@drawable/btncolororange"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>